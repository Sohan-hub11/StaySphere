<% layout("/layouts/boilerplate") %>
  <br><br>


  <body>
    <div class="row">
      <div class="col-8 offset-4">

        <h3>
          <%= listing.title %>
        </h3>
      </div>
      <div class="card col-3 offset-4 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <br>
            <%= listing.description %> <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                  <%= listing.country %>
          </p>
        </div>
      </div>
      <div class="btns mb-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger col-1 offset-4">Edit</a>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark offset-5">Delete</button>
        </form>
      </div>
      <hr>
      <div class="col-8 offset-4 mb-3">
        <h4>Leave a Review</h4>
        <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" rows="5" cols="30" class="form-control" required></textarea>
            <div class="invalid-feedback">
              Please add some comments for review!
            </div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>

        <hr>

        <p><b>All Reviews</b></p>
        <div class="row">
          <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">Sintu</h5>
                <p class="card-text">
                  <%= review.comment %>
                </p>
                <p class="card-text">
                  <%= review.rating %>
                </p>
              </div>
            </div>
            <% } %>
        </div>

      </div>
    </div>

    <br><br>
  </body>